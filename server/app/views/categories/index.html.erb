<h1>
  All Categories
  <%= link_to image_tag("addnew.png"), new_category_path, :class => "add-to-button" %>
</h1>
<div>
  <% @categories.each do |category| %>
    <ul>
      <li>
        <%= link_to category.name, category %> (<%= category.items.count %>)
        <%= link_to "Edit", edit_category_path(category), method: :get %> |
        <%= link_to "Delete", category, method: :delete, data: { confirm: "Are you sure?" } %>
      </li>
    </ul>
  <% end %>
</div>

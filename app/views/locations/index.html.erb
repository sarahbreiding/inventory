<h1>All Locations <%= link_to image_tag("addnew.png"), new_location_path, :class => "add-to-button" %></h1>
<table>
<% @locations.each do |location| %>
  <tr>
    <td><%= link_to location.name, location %> (<%= location.items.count %>)</td>
    <td><%= link_to image_tag("Edit.png"), edit_location_path(location), method: :get %></td>
    <td><%= link_to image_tag("Delete.png"), location, method: :delete, data: {confirm: "Are you sure?"} %></td>
  </tr>
<% end %>
</table>


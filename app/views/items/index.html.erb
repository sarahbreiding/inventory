<h1>All Inventory Items</h1>

<table>
  <thead>
    <tr>
      <th>Item</th>
      <th>Quantity</th>
      <th>Status</th>
      <th><%= link_to "Category", categories_path %></th>
      <th><%= link_to "Location", locations_path %></th>
    </tr>
  </thead>

<% @items.each do |item| %>
  <tr>
    <td><%= link_to item.name, item %></td>
    <td><%= item.quantity %></td>
    <td><%= item.status %></td>
    <td>
      <% if item.category %>
        <%= link_to item.category.name, item.category %>
      <% else %>
        No category
      <% end %>
    </td>
    <td>
      <% if item.location %>
        <%= link_to item.location.name, item.location %>
      <% else %>
        No location
      <% end %>
    </td>
    <td><%= button_to "Edit", edit_item_path(item), method: :get %></td>
    <td><%= button_to "Delete", item, method: :delete,
                                    data: { confirm: "Are you sure?" } %></td>
  </tr>
<% end %>
</table>

<button>
  <%= link_to "Add New Item", new_item_path %>
</button>

<button>
  <%= link_to "Add New Category", new_category_path %>
</button>

<button>
<%= link_to "Add New Location", new_location_path %>



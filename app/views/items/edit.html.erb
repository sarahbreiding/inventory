<h1>Edit Item</h1>
  <div>
    <%= form_for(@item) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :quantity %>
      <%= f.number_field :quantity %>

      <%= f.label :status %>
      <%= f.text_field :status %>

      <%= f.label :category %>
      <%= f.collection_select :category_id, Category.all, :id, :name %>

      <%= f.label :location %>
      <%= f.collection_select :location_id, Location.all, :id, :name %>

      <%= f.submit %>
    <% end %>
  </div>

   <div class="add-new"><%= link_to "Cancel", items_path %></div>


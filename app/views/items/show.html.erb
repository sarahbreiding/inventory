<h1>
  <strong><%= @item.name %></strong>
  <%= link_to image_tag("Edit.png"), edit_item_path(@item) %>
  <%= link_to image_tag('Delete.png'), item_path, method: :delete, data: {confirm: "Are you sure?"} %>
</h1>
<p><strong>Quantity: </strong><%= @item.quantity %></p>
<p><strong>Notes: </strong><%= @item.notes %></p>
<p><strong>Expiration Date: </strong><%= @item.expiration_date %></p>
<p><strong>Category: </strong><%= @item.category.name %></p>
<p><strong>Location: </strong><%= @item.location.name %></p>
<div><%= link_to "Cancel", items_path %></div>
